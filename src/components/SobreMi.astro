---
const { lang, t } = Astro.props;

const languages = [
	{ code: 'es', label: t.languageOptions.es },
	{ code: 'en', label: t.languageOptions.en },
]
---

<div id="container">
  <header>
    <button id="theme-switch">
      <p>{t.themeOptions.dark}</p>
      <p>{t.themeOptions.light}</p>
    </button>

    <form id="language-switch">
      <label for="language-select">{t.languageOptions.label}</label>
      <select id="language-select">
        {
          languages.map((language) => (
            <option value={language.code} selected={language.code === lang}>
              {language.label}
            </option>
          ))
        }
      </select>
    </form>
    
  </header>
  <main>
    <section id="informacion">
      <h1>Lautaro Portillo</h1>

      <p>
        Desarrollador FullStack con experiencia en proyectos reales tanto institucionales como personales.
      </p>

      <section id="links">
        <a class="linkedin">
          <span class="icon"></span>
          LinkedIn
        </a>
        <a class="github">
          <span class="icon"></span>
          GitHub
        </a>
      </section>

    </section>
  </main>
</div>

<style>
  #container {
		height: 100%;
    display: flex;
    flex-direction: column;
	}

  header {
    display: flex;
    gap: 1rem;
  }
  header p {
    margin: 0;
  }
  #theme-switch p:last-child {
    display: none;
  }
  :global(.darkMode) #theme-switch p:first-child {
    display: none;
  }
  :global(.darkMode) #theme-switch p:last-child {
    display: block;
  }

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#informacion {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 1rem;
	}
  #informacion h1 {
		font-size: 1.5rem;
    margin: 0;
    line-height: 0.25;
	}

  #links {
		display: flex;
		gap: 1rem;
	}
  #links a {
    display: flex;
    align-items: center;
    border: 1px solid;
    border-radius: 5px;
    padding: 0.1rem 0.2rem;
    gap: 0.25rem;
    font-size: 0.9rem;
    background-color: var(--background-color);
    color: var(--text-color);
  }
  #links a:hover {
    cursor: pointer;
    background-color: var(--text-color);
    color: var(--background-color);
  }
  #links a .icon {
    width: 1.5rem;
    height: 1.5rem;
    background-size: contain;
    background-position: center;
  }
  .linkedin .icon {
    background-image: url(/linkedinDark.png);
  }
  .linkedin:hover .icon {
    background-image: url(/linkedinLight.png);
  }
  .github .icon {
    background-image: url(/githubDark.png);
  }
  .github:hover .icon {
    background-image: url(/githubLight.png);
  }
  

  @media (min-width: 768px) {
    #informacion h1 {
      font-size: 3rem;
      line-height: 0.5;
    }

    #informacion p {
      font-size: 1.3rem;
    }

    #links a {
      padding: 0.25rem 0.5rem;
      gap: 0.5rem;
      font-size: 1rem;
    }
    #links a .icon {
      width: 1.7rem;
      height: 1.7rem;
    }
  }
</style>
